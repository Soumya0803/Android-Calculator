<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/textView"
        android:layout_weight="1"
        android:textSize="50dp"
        android:textAlignment="viewEnd"
        android:layout_gravity="end"

        />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
             android:id="@+id/openingbracket"
            android:layout_weight="1"
            android:text="("
            android:background="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/closingbracket"
            android:layout_weight="1"
            android:text=" )"
            android:background="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/percentage"
        android:layout_weight="1"
        android:text="%"
        android:background="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold"
            style="@style/Widget.AppCompat.Button" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/backbutton"
            android:layout_weight="1"
            android:text="Back"
            android:background="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/seven"
            android:layout_weight="1"
            android:text="7"
            android:background="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/eight"
            android:layout_weight="1"
            android:text="8"
            android:background="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/nine"
            android:layout_weight="1"
            android:text="9"
            android:background="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/multiply"
            android:layout_weight="1"
            android:text="*"
            android:background="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold"
            />



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/four"
            android:layout_weight="1"
            android:text="4"
            android:background="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/five"
            android:layout_weight="1"
            android:text="5"
            android:background="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/six"
            android:layout_weight="1"
            android:text="6"
            android:background="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/minus"
            android:layout_weight="1"
            android:text="-"
            android:background="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold"
            />



    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/one"
            android:layout_weight="1"
            android:text="1"
            android:background="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/two"
            android:layout_weight="1"
            android:text="2"
            android:background="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/three"
            android:layout_weight="1"
            android:text="3"
            android:background="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/add"
            android:layout_weight="1"
            android:text="+"
            android:background="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/dot"
            android:layout_weight="1"
            android:text="."
            android:background="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/zero"
            android:layout_weight="1"
            android:text="0"
            android:background="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/equal"
            android:layout_weight="1"
            android:text="="
            android:background="@color/colorPrimaryDark"
            android:textSize="30sp"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/divide"
            android:layout_weight="1"
            android:text="/"
            android:background="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold"
            />



    </LinearLayout>


</LinearLayout>